#version 460
#extension GL_GOOGLE_include_directive : require

#include "common/shared.hpp"

layout(local_size_x = 16, local_size_y = 16, local_size_z = 1) in;

// Use Samplers but access via texelFetch
layout(set = 0, binding = 0) uniform sampler2D denoisedGiSampler;
layout(set = 0, binding = 11) uniform sampler2D diffuseAlbedoSampler;

layout(set = 0, binding = 1, rgba16f) uniform image2D modulatedGiImage;

void main() {
    ivec2 p = ivec2(gl_GlobalInvocationID.xy);
    ivec2 size = imageSize(modulatedGiImage);
    if (p.x >= size.x || p.y >= size.y) return;

    // --- High performance texelFetch ---
    vec3 L = texelFetch(denoisedGiSampler, p, 0).rgb;
    vec3 A = texelFetch(diffuseAlbedoSampler, p, 0).rgb;

    // Remodulate: Radiance = Lighting * Albedo
    vec3 C = L * A;

    if (any(isnan(C))) C = vec3(0.0);
    imageStore(modulatedGiImage, p, vec4(max(C, vec3(0.0)), 1.0));
}